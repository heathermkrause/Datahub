        <% if get_name_error(resource) || get_email_error(resource) || get_password_error(resource) || get_confirm_password_error(resource) %>
  <p class="alert">
    <%=  get_name_error(resource) if get_name_error(resource) %> <br/>
    <%= get_email_error(resource) if get_email_error(resource) %><br/>
    <%= get_password_error(resource) if get_password_error(resource) %><br/>
    <%= get_confirm_password_error(resource) if get_confirm_password_error(resource) %><br/>
  </p>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="span2"></div>

      <div class="span8" id="content">
        <div style="width:550px; margin:0px auto;">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class=>"form-horizontal"}) do |f| %>


        
            <h1>Sign Up</h1>
            <div class="control-group">
              <label class="control-label">Name:</label>
              <div class="controls">
                <%= f.text_field :name ,:required=> true,:required=>true, :placeholder=> "Name" ,:class=>"input-xlarge input-prepend" %>
              
              </div>

            </div>


            <div class="control-group">
              <label class="control-label">Email:</label>
              <div class="controls">
                <%= f.text_field :email , :required=> true,:required=>true, :placeholder=>"Email Id" ,:class=>"input-xlarge input-prepend" %>
                

              </div>
            </div>

            <div class="control-group" >
              <label class="control-label">Password:</label>
              <div class="controls">

                <%= f.password_field :password ,:required=> true, :class=>"input-xlarge input-prepend" ,:required=>true, :placeholder=>"Password"  %>
                
              </div>
            </div>

            <div class="control-group">
              <label class="control-label">Confirm Password:</label>
              <div class="controls">

                <%= f.password_field :password_confirmation , :required=> true,:class=>"input-xlarge input-prepend",:required=>true, :placeholder=>"Confirm Password"  %>
              
              </div>
            </div>



            <div class="control-group">
              <div class="controls">


                <%= f.submit "Sign up" , :id=>"signin" %>
              </div>

            </div>
            <div class="button" style="padding-top:20px;">
              <a href="<%= new_session_path(resource_name) %>">Sign in</a>
            </div>
          <% end %> <!-- form -->


        </div>

      </div>


    </div>

  </div>

