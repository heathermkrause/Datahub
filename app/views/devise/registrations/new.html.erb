  <script type="text/javascript">
    $("#signin" ).click(function() {
      $("#user_name").removeAttr("required");
      $("#user_email").removeAttr("required");
      $("#user_password").removeAttr("required");
      $("#user_password_confirmation").removeAttr("required");
