<h1>Listing documents</h1>

<table>
  <tr>
    <th>Report name</th>
    <th>Author</th>
    <th>Sponsoring orgnization</th>
    <th>Date of report</th>
    <th>Key recommendations</th>
    <th>Key ages</th>
    <th>Notes on mythodology</th>
    <th>Target population</th>
    <th>Data availablity</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.report_name %></td>
    <td><%= document.author %></td>
    <td><%= document.sponsoring_orgnization %></td>
    <td><%= document.date_of_report %></td>
    <td><%= document.key_recommendations %></td>
    <td><%= document.key_ages %></td>
    <td><%= document.notes_on_mythodology %></td>
    <td><%= document.target_population %></td>
    <td><%= document.data_availablity %></td>
    <td><%= document.user_id %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Document', new_document_path %>
